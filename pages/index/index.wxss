/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.background {
  margin-top: 10rpx;
  margin-left: 30rpx;
  background: #f5f6f5;
  padding: 10rpx;
  border-radius: 20rpx;
}

.newest-box {
  padding: 0 30rpx 30rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
}
.newest-box1 {
  padding: 0 30rpx 100rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.newest-text {
  font-size: 26rpx;
  padding: 0;
  margin: 0rpx, 0, 5rpx, 0;
  width: 200rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.newest-box .newest-list image {
  width: 135rpx;
  height: 120rpx;
  margin: 10rpx 0 10rpx;
}

.newest-box .newest-list1 image {
  width: 200rpx;
  height: 120rpx;
  margin: 20rpx 0 20rpx;
}

.newest-box .newest-list {
  display: inline-block;
  width: 33%;
  height: 205rpx;
  /* margin:0 20rpx 20rpx 0; */
  border-radius: 10px;
  text-align: center;
  /* background: #f5f6f5; */
}

.newest-box .newest-list1 {
  display: inline-block;
  width: 195rpx;
  height: 195rpx;
  margin: 0 10rpx 10rpx 0;
  border-radius: 10px;
  text-align: center;
  /* background: #f5f6f5; */
}

.newest-box .newest-list:nth-child(2n) {
  /* margin-right: 5; */
}

.newest-text1 {
  font-size: 32rpx;
  color: red;
  font-weight: bold;
  text-align: left;
  margin-left: 60rpx;
}

.newest-text2 {
  font-size: 32rpx;
  color: rgb(0, 89, 255);
  font-weight: bold;
  text-align: left;
  margin-left: 60rpx;
}
