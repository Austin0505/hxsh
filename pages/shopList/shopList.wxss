.goods-list {
  display: flex;
  flex-wrap: wrap;
  /* flex-direction: column; *//* height: 90%; */
  margin-top: 30rpx;
  /* justify-content: space-around; */
}

.goods-title {
  width: 100%;
  font-size: 13px;
  /* font-weight:bold; */
  margin: 0 12rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #d7d7d7;
}

.goods {
  display: flex;
  flex-wrap: wrap;
  width: 220rpx;
  font-size: 13px;
  margin: 15rpx;
  text-align: center;
  justify-content: center;
  overflow: hidden;
}

.goods text {
  /* overflow: hidden;
  white-space: nowrap;
