/**分类栏**/

.classify {
  display: flex;
  width: 100%;
  /* background-color: #F6F6F6; */
}

.fixleft {
  position: relative;
}

/* show和hide的css一个是diaplay:block,一个是 diaplay:none--> */

.show {
  display: block;
}

.hide {
  display: none;
}

.tabcontent {
  color: red;
}

.bartext {
  vertical-align: middle;
  margin-left: 20rpx;
}

.baricon {
  width: 50rpx;
  height: 50rpx;
  line-height: 120rpx;
  vertical-align: middle;
}

.barcontent {
  /* overflow: hidden; */
  margin-left: 30rpx;
  /* box-sizing: content-box; */
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.currentTabView {
  text-align: center;
}

.left-navbar {
  position: fixed;
  width: 30%;
  height: 100%;
  background-color: #f6f6f6;
  font-size: 14px;
  /* box-sizing: border-box; */
  overflow: hidden;
}

.left-navbar view {
  /* height: 120rpx; */
  line-height: 120rpx;
}

.hiddentext {
  overflow: hidden;
  width: 100%;
}

.bar_border_bottom {
  border-bottom: 1rpx solid black;
}

.active {
  background-color: white;
  /* color: red; */
  font-weight: bold;
  /* border-left: 1rpx  solid red; */
}

.tabview-content {
  /* background-color:rgb(205, 207, 207); */
  font-size: 20rpx;
}

#right {
  position: absolute;
  background-color: white;
  right: 0;
  width: 70%;
  height: 90%;
  /* box-sizing: content-box; */
}

.goods-right {
  /* display: flex; */
}

