  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  /* white-space: normal !important; */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 16rpx;
  /* line-height: 100%; */
}

.img {
  width: 260rpx;
  height: 160rpx;
}
