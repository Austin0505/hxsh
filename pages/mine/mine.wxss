/* pages/mine/mine.wxss */
.main{
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.header {
  /* position: relative; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 250rpx;
  /* line-height: 250rpx; */
  padding: 0 7% ;
  box-sizing: border-box;
  /* background: rgb(92, 141, 218); */
  font-size: 35rpx;
  /* color: #fff; */
    color: #999;
}
.touxiang_left{
  display: flex;
  align-items: center;
}
.touxiang{
  display: flex;
  flex-direction: column;
}
.header image {
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
}
.imgRightText{
  padding-left: 20rpx;
}

.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 83rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .about {
  /* float: right; */
}

.address-box {
  border-bottom: 20rpx solid #ededed;
  color: #999;
  line-height: 80rpx;
  font-size: 28rpx;
}

.address-box .address-manage {
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}

.address-box .address-manage::after {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.address-box .address-list {
  padding-left: 30rpx;
}

.address-box .address-list view {
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.address-box .address-list view:last-child {
  border-bottom: 0;
}

.address-box.addrlistbox {
  display: inline-block;
  width: 195rpx;
  height: 195rpx;
  margin: 0 30rpx 10rpx 100rpx;
  padding: 50rpx;
  border-radius: 10px;
}

.orders-box {
  color: #999;
  font-size: 28rpx;
  padding-bottom: 120rpx;
}

.orders {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}

.orders-list {
  position: relative;
  padding-left: 30rpx;
  border-bottom: 20rpx solid #ededed;
}

.orders-list:last-child {
  border-bottom: 0;
}

.orders-number {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail {
  position: relative;
  height: 120rpx;
  padding: 35rpx 20rpx 35rpx 20rpx;
  border-bottom: 1rpx solid #e9e9e9;
  /* display: flex;
    flex-direction: row; */
}

.orders-detail image {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.orders-detail view {
  line-height: 60rpx;
}

.view1 {
  flex-direction: row;
  display: flex;
}

.orders-detail .orders-status {
  position: absolute;
  right: 20rpx;
  top: 35rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #b42f2d;
}

.orders-footer {
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding: 15rpx 30rpx 15rpx 0;
}

.orders-footer .orders-btn {
  float: right;
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  background: rgb(92, 141, 218);
  color: #fffc;
}

/* 水平显示 */

.flex-wrp-row {
  display: flex;
  flex-direction: row;
}

.item {
  padding: 20rpx;
  position: relative;
}

.item-left {
  flex: 1; /* 重要 */
