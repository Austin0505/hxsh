/* @import '../../common/common.wxss'; */
page{
  width: 100%;
  height:100%;
}
.main {
  margin: 0;
  padding: 0;
}

.goods-box {
  position: relative;
  padding: 40rpx 45rpx;
  text-align: center;
  color: #454552;
  border-bottom: 30rpx solid #ededed;
}
.goods-box:fater{
  clear: both;
  content: '';
  width: 0;
  height: 0;
  display: block;
  visibility: hidden;
}

.goods-box .goods-thumb {
  width: 300rpx;
  height: 300rpx;
  margin: 35rpx 0 125rpx;
  /* display: block;
  outline: none;
  border: 0; */
  /* height: 100%;
  width: 100%; */
}
.goods-price-outer{
  text-align: left;
}
.to-carts-icon {
  position: absolute;
  right: 70rpx;
  top: 70rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  opacity: 0.6;
  -webkit-animation: to_cart 0.3s ease-out;
  animation: to_cart 0.3s ease-out;
}

@-webkit-keyframes to_cart {
  0% {
    right: 100rpx;
    top: 530rpx;
    -webkit-transform: scale(4);
  }/*60%{
        top: 20rpx;
    }*/
}

@keyframes to_cart {
  0% {
    right: 100rpx;
    top: 530rpx;
    transform: scale(4);
  }/*60%{
        top: 20rpx;
    }*/
}

.carts-icon {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 75rpx;
  height: 75rpx;
}

.carts-icon image {
  width: 100%;
  height: 100%;
}

.carts-icon.on {
  -webkit-animation: to_cart_scale 0.3s ease;
  animation: to_cart_scale 0.3s ease;
}

@-webkit-keyframes to_cart_scale {
  50% {
    -webkit-transform: scale(1.2);
  }
}

@keyframes to_cart_scale {
  50% {
    transform: scale(1.2);
  }
}

.carts-icon-num {
  position: absolute;
  left: -15rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background: rgb(92, 141, 218);
  color: #fff;
  font-size: 24rpx;
}

.goods-operation {
  position: fixed;
  bottom: -20rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  /* padding: 0 50rpx; */
  margin-bottom: 25rpx;
  /* box-sizing: content-box; */
  border-radius: 50rpx;
  background: rgb(92, 141, 218);
  color: #fff;
  font-size: 28rpx;
}

.goods-flex {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.goods-btnflex {
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.goods-box .goods-operation .goods-flex .goods-btnflex img {
  width: 45rpx;
  height: 45rpx;
}

.goods-carflex {
  flex: 0.8;
  justify-content: space-between;
}

.goods-operation-num {
  vertical-align: middle;
}

.goods-operation-add {
  width: 55rpx;
  height: 55rpx;
  vertical-align: middle;
}

.goods-operation-sub {
  width: 55rpx;
  height: 55rpx;
  vertical-align: middle;
}

.goods-to-cart {
  width: 210rpx;
  /* padding-right: 75rpx; */
}

.goods-cart-img {
  position: absolute;
  top: 28rpx;
  right: 50rpx;
  width: 55rpx;
  height: 55rpx;
}

.goods-stock {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.goods-title {
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.goods-name{
  font-weight: bold;
}

.goods-price {
  font-size: 32rpx;
  color:rgb(94, 90, 90);
  font-weight: bold;
}

.goods-tab-nav {
  display: inline-block;
  width: 33.33%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
}

.goods-tab-nav.on {
  color: #bcaa8a;
  border-bottom: 5rpx solid #bcaa8a;
}

.goods-content {
  padding: 40rpx;
  font-size: 26rpx;
  font-weight: lighter;
}
.goods-tab-box{
  padding-bottom: 100rpx;
}
